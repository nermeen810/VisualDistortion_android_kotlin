<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/showAllTxt"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@color/shimmer_placeholder"
                android:layout_margin="@dimen/paddingLayout"
                android:padding="@dimen/paddingText"
                android:textColor="@color/teal"
                android:textSize="@dimen/midTextSize"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/periodTxt"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/paddingLayout"
                android:padding="@dimen/paddingText"
                android:background="@color/shimmer_placeholder"
                android:textColor="@color/black"
                android:textSize="@dimen/normalTextSize"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taskNumTxt" />

            <TextView
                android:id="@+id/periodValue"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:background="@color/shimmer_placeholder"
                android:layout_margin="@dimen/paddingLayout"
                android:padding="@dimen/paddingText"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/normalTextSize"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taskNumTxt" />

            <TextView
                android:id="@+id/taskNumTxt"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@color/shimmer_placeholder"
                android:layout_margin="@dimen/paddingLayout"
                android:padding="@dimen/paddingText"
                android:textColor="@color/black"
                android:textSize="@dimen/midTextSize"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"  />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/periodValue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle"
                    android:orientation="horizontal"
                    android:padding="@dimen/paddingLayout"
                    android:weightSum="10">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:padding="@dimen/paddingText">

                        <TextView
                            android:id="@+id/serviceNumTxt"
                            android:layout_width="70dp"
                            android:layout_height="15dp"
                            android:layout_margin="@dimen/paddingText"
                            android:background="@color/shimmer_placeholder"
                            android:padding="4dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/serviceNumValue"
                            android:layout_width="70dp"
                            android:layout_height="15dp"
                            android:layout_margin="@dimen/paddingText"
                            android:background="@color/shimmer_placeholder"
                            android:padding="4dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintRight_toLeftOf="@+id/serviceNumTxt"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/date_txt"
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="@dimen/paddingText"
                            android:layout_marginTop="4dp"
                            android:background="@color/shimmer_placeholder"
                            android:padding="@dimen/paddingText"
                            android:textColor="@color/dark_gray"
                            android:textSize="13sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!--                <TextView-->
                        <!--                    android:id="@+id/time_txt"-->
                        <!--                    android:layout_width="30dp"-->
                        <!--                    android:layout_height="15dp"-->
                        <!--                    android:layout_margin="4dp"-->
                        <!--                    android:padding="@dimen/paddingText"-->
                        <!--                    android:background="@color/shimmer_placeholder"-->
                        <!--                    android:textColor="@color/dark_gray"-->
                        <!--                    android:textSize="13sp"-->
                        <!--                    app:layout_constraintEnd_toEndOf="parent"-->
                        <!--                    app:layout_constraintTop_toTopOf="parent" />-->
                        <!--             -->
                        <TextView
                            android:id="@+id/address_txt"
                            android:layout_width="70dp"
                            android:layout_height="15dp"
                            android:layout_margin="@dimen/paddingText"
                            android:background="@color/shimmer_placeholder"
                            android:padding="@dimen/paddingText"
                            android:textColor="@color/dark_gray"
                            android:textSize="13sp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/serviceNumTxt" />

                        <TextView
                            android:id="@+id/addressValue"
                            android:layout_width="70dp"
                            android:layout_height="15dp"
                            android:layout_margin="@dimen/paddingText"
                            android:background="@color/shimmer_placeholder"
                            android:padding="@dimen/paddingText"
                            android:textColor="@color/dark_gray"
                            android:textSize="13sp"
                            app:layout_constraintRight_toLeftOf="@+id/address_txt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/serviceNumValue" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!--            <ImageView-->
                    <!--                android:id="@+id/trip_img"-->
                    <!--                android:layout_width="0dp"-->
                    <!--                android:layout_height="45dp"-->
                    <!--                android:layout_weight="1"-->
                    <!--                android:background="@color/shimmer_placeholder"-->
                    <!--                android:layout_gravity="center"-->
                    <!--                android:layout_margin="5dp" />-->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>